<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/rounded_stroke_sh"
    android:layout_height="@dimen/_70sdp">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="@dimen/_84sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/_34sdp"
        android:background="#C979C7EB"
        android:id="@+id/calBg"
        app:roundPercent="5"/>
    <TextView
        android:id="@+id/counterTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textColor="#26334A"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/calBg"
        app:layout_constraintEnd_toEndOf="@id/calBg"
        app:layout_constraintTop_toTopOf="@id/calBg"
        app:layout_constraintBottom_toBottomOf="@id/calBg"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        app:cardCornerRadius="@dimen/_11sdp"
        android:id="@+id/minosBtn"
        app:cardElevation="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_3sdp"
        app:layout_constraintStart_toStartOf="@id/calBg"
        app:layout_constraintEnd_toStartOf="@id/counterTv"
        app:layout_constraintTop_toTopOf="@id/calBg"
        app:layout_constraintBottom_toBottomOf="@id/calBg">
        <View
            android:background="@color/red"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        app:cardCornerRadius="@dimen/_11sdp"
        app:cardElevation="@dimen/_1sdp"
        android:id="@+id/plusBtn"

        app:cardBackgroundColor="@color/greenColor"
        android:layout_marginStart="@dimen/_3sdp"
        app:layout_constraintStart_toStartOf="@id/counterTv"
        app:layout_constraintEnd_toEndOf="@id/calBg"
        app:layout_constraintTop_toTopOf="@id/calBg"
        app:layout_constraintBottom_toBottomOf="@id/calBg">
        <View
            android:background="@color/yellowColor"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_gravity="center"/>
        <View
            android:background="@color/yellowColor"
            android:rotation="90"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="@dimen/_60sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:id="@+id/icon"
        android:src="@drawable/ic_logo_mastercard"/>
    <TextView
        android:id="@+id/amountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AED 345"
        android:textColor="#26334A"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        />
    <TextView
        android:id="@+id/stockTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#26334A"
        android:text="Stock: 32"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@id/amountTv"
        app:layout_constraintTop_toBottomOf="@id/amountTv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#26334A"
        android:text="Water Pack"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@id/amountTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/amountTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>