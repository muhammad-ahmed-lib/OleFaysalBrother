<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/whiteColor"
    android:layout_marginStart="@dimen/_15sdpp"
    android:layout_marginEnd="@dimen/_15sdpp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_5sdpp"
    android:id="@+id/main_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdpp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="@dimen/_50sdpp"
            android:layout_height="@dimen/_50sdpp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="#00305E"
            app:cardCornerRadius="@dimen/_25sdpp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_vu_icon"
                android:layout_width="@dimen/_20sdpp"
                android:layout_height="@dimen/_20sdpp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/booking_tab" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/card"
            android:layout_marginStart="@dimen/_10sdpp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normal Booking (3 times)"
                android:textColor="@color/darkTextColor"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/tv_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dates"
                android:textColor="@color/subTextColor"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/_3sdpp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tv_remaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="remaining"
                android:textColor="@color/greenColor"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/_3sdpp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>