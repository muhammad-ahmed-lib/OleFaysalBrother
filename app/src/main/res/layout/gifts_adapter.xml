<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/rel_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/_4sdpp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="@dimen/_10sdpp"
            app:contentPadding="@dimen/_10sdpp"
            android:layout_marginTop="@dimen/_5sdpp"
            android:layout_marginStart="@dimen/_5sdpp"
            android:layout_marginEnd="@dimen/_5sdpp"
            android:layout_marginBottom="@dimen/_5sdpp">

            <ImageView
                android:id="@+id/img_vu"
                android:layout_width="@dimen/_85sdpp"
                android:layout_height="@dimen/_85sdpp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/bank_icon"
                android:scaleType="centerInside"/>
            <TextView
                android:id="@+id/tv_gift_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_100sdpp"
                android:layout_marginBottom="@dimen/_25sdpp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/black"
                android:text="Most Booking"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_100sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_100sdpp"
                android:layout_marginTop="@dimen/_60sdpp"
                android:ellipsize="end"
                android:lines="1"
                android:text="DD/MM/YYYY"
                android:textColor="#707070"
                android:textSize="14sp"
                android:fontFamily="@font/dubai_medium"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/_2sdpp"
                android:layout_marginStart="-3dp"
                android:layout_marginBottom="@dimen/_1sdpp"
                android:src="@drawable/detail_arrow" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>