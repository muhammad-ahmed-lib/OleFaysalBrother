<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".booking.bottomSheets.BookingConfirmationSheetFragment">

        <RelativeLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_botton_bg"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/_2sdpp"
            android:layout_marginTop="@dimen/_10sdpp">

                <RelativeLayout
                    android:id="@+id/rel_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:layout_marginEnd="@dimen/_5sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">


                    <ImageButton
                        android:id="@+id/btn_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:src="@drawable/v5_cross" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/gt_walsheim_pro_medium"
                        android:gravity="center"
                        android:text="Booking Confirmation"
                        android:layout_centerInParent="true"
                        android:textColor="@color/v5_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/info_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/rel_head"
                    android:layout_marginTop="@dimen/_20sdpp"
                    android:layout_marginStart="@dimen/_25sdpp"
                    android:layout_marginEnd="@dimen/_25sdpp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            app:cardBackgroundColor="@color/whiteColor"
                            app:cardCornerRadius="@dimen/_10sdpp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/separatorColor"
                            app:strokeWidth="@dimen/_1sdpp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdpp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdpp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="@font/gt_walsheim_pro_regular"
                                        android:text="Stadium"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_hint_color_grey" />

                                    <TextView
                                        android:id="@+id/tv_club_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:text="club name"
                                        android:fontFamily="@font/gt_walsheim_pro_medium"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_color" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdpp"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/separatorColor" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdpp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="@string/field"
                                        android:fontFamily="@font/gt_walsheim_pro_regular"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_hint_color_grey" />

                                    <TextView
                                        android:id="@+id/tv_field_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:text="field name"
                                        android:fontFamily="@font/gt_walsheim_pro_medium"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_color" />

                                </RelativeLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            app:cardBackgroundColor="@color/whiteColor"
                            app:cardCornerRadius="@dimen/_10sdpp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/separatorColor"
                            app:strokeWidth="@dimen/_1sdpp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdpp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdpp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="@string/date"
                                        android:fontFamily="@font/gt_walsheim_pro_regular"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_hint_color_grey"  />

                                    <TextView
                                        android:id="@+id/tv_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:text="date"
                                        android:fontFamily="@font/gt_walsheim_pro_medium"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_color"/>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdpp"
                                        android:layout_alignParentBottom="true"
                                        android:background="@color/separatorColor" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdpp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="@string/time"
                                        android:fontFamily="@font/gt_walsheim_pro_regular"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_hint_color_grey"  />

                                    <TextView
                                        android:id="@+id/tv_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:text="time"
                                        android:fontFamily="@font/gt_walsheim_pro_medium"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_16sdpp"
                                        android:textColor="@color/v5_text_color" />

                                </RelativeLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                    </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_below="@+id/info_lay"
                    android:layout_marginTop="@dimen/_20sdpp"
                    android:layout_marginStart="@dimen/_25sdpp"
                    android:layout_marginEnd="@dimen/_25sdpp"
                    android:layout_marginBottom="@dimen/_20sdpp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/_10sdpp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/v5_green_button_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm"
                        android:layout_gravity="center"
                        android:textColor="@color/whiteColor"
                        android:fontFamily="@font/gt_walsheim_pro_medium"
                        android:textSize="@dimen/_18sdpp" />

                </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>


</RelativeLayout>

