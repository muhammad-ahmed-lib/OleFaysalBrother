<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.AdsSubscriptionPopupFragment">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="@dimen/_35sdpp"
        android:layout_height="@dimen/_35sdpp"
        android:layout_above="@+id/main_ll"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:layout_marginEnd="@dimen/_10sdpp"
        android:src="@drawable/close_button" />

    <androidx.cardview.widget.CardView
            android:id="@+id/main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdpp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            android:layout_marginStart="@dimen/_10sdpp"
            android:layout_marginEnd="@dimen/_10sdpp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdpp"
                    android:paddingEnd="@dimen/_15sdpp">

                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:layout_marginBottom="@dimen/_10sdpp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/watch_ad"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_240sdpp"
                                android:layout_weight="1"
                                app:cardCornerRadius="@dimen/_10sdpp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/customborder">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_30sdpp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="@dimen/_10sdpp"
                                        android:gravity="center"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/subscription_txt_bg" />

                                    <TextView
                                        android:id="@+id/ad_jersey_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdpp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="0dp"
                                        android:gravity="center"
                                        android:text="Ad"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black" />

                                    <RelativeLayout
                                        android:id="@+id/ad_card"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/ad_jersey_txt"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/_10sdpp">

                                        <FrameLayout
                                            android:layout_width="@dimen/_80sdpp"
                                            android:layout_height="@dimen/_80sdpp"
                                            android:layout_marginStart="@dimen/_10sdpp"
                                            android:layout_marginEnd="@dimen/_10sdpp">

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/customcircle" />

                                            <ImageView
                                                android:id="@+id/shirt_img_vu_ad"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_50sdpp"
                                                android:layout_gravity="center"
                                                android:elevation="2dp"
                                                android:scaleType="centerInside"
                                                android:src="@drawable/shirtl" />

                                        </FrameLayout>

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_below="@id/ad_card"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="@dimen/_10sdpp"
                                        android:layout_marginTop="@dimen/_10sdpp"
                                        android:layout_marginEnd="@dimen/_10sdpp"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="@dimen/_10sdpp">

                                        <TextView
                                            android:id="@+id/tv_ad"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Watch a Rewarded Video Ad to Unlock 1 Jersey"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/whiteColor" />

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:gravity="center"
                                        android:layout_marginBottom="@dimen/_10sdpp">

                                        <ImageButton
                                            android:id="@+id/ad_btn"
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:layout_alignParentStart="true"
                                            android:layout_marginStart="0dp"
                                            android:background="@null"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/watchad_btn" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:gravity="center"
                                            android:orientation="horizontal">


                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:src="@drawable/ad_arrow" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_10sdpp"
                                                android:text="Watch"
                                                android:gravity="center"
                                                android:textSize="16sp"
                                               android:fontFamily="@font/dubai_bold"
                                                android:textColor="@color/black" />

                                        </LinearLayout>


                                    </RelativeLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                            <View
                                android:layout_width="@dimen/_20sdpp"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent" />
                            <androidx.cardview.widget.CardView
                                android:id="@+id/subscribe"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_240sdpp"
                                android:layout_weight="1"
                                app:cardCornerRadius="@dimen/_10sdpp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/customborder">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_30sdpp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="@dimen/_10sdpp"
                                        android:gravity="center"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/subscription_txt_bg" />

                                    <TextView
                                        android:id="@+id/subs_jersey_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdpp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="0dp"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="0dp"
                                        android:gravity="center"
                                        android:text="Jerseys"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black" />

                                    <RelativeLayout
                                        android:id="@+id/subs_card"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/subs_jersey_txt"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/_10sdpp">

                                        <FrameLayout
                                            android:layout_width="@dimen/_80sdpp"
                                            android:layout_height="@dimen/_80sdpp"
                                            android:layout_marginStart="@dimen/_10sdpp"
                                            android:layout_marginEnd="@dimen/_10sdpp">

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/customcircle" />

                                            <ImageView
                                                android:id="@+id/shirt_img_vu_subs"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_50sdpp"
                                                android:layout_gravity="center"
                                                android:elevation="2dp"
                                                android:scaleType="centerInside"
                                                android:src="@drawable/shirtl" />

                                        </FrameLayout>

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_below="@id/subs_card"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="@dimen/_10sdpp"
                                        android:layout_marginTop="@dimen/_10sdpp"
                                        android:layout_marginEnd="@dimen/_10sdpp"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="@dimen/_10sdpp">

                                        <TextView
                                            android:id="@+id/tv_subs"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Subscribe and \n Unlock All Jerseys!"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/whiteColor" />

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:gravity="center"
                                        android:layout_marginBottom="@dimen/_10sdpp">

                                        <ImageButton
                                            android:id="@+id/subscribe_btn"
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:layout_alignParentStart="true"
                                            android:layout_marginStart="0dp"
                                            android:background="@null"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/watchad_btn" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_10sdpp"
                                                android:text="Subscribe"
                                                android:textSize="16sp"
                                                android:gravity="center"
                                                android:fontFamily="@font/dubai_bold"
                                                android:textColor="@color/black" />

                                        </LinearLayout>


                                    </RelativeLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                </LinearLayout>


    </androidx.cardview.widget.CardView>

    </RelativeLayout>

