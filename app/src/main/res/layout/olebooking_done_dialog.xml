<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:cardBackgroundColor="@color/bgVuColor"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/_15sdpp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_60sdpp"
                android:layout_height="@dimen/_60sdpp"
                android:src="@drawable/correct_ic"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blueColorNew"
                android:layout_marginTop="@dimen/_10sdpp"
                android:text="@string/congrat_booking_done"
                android:fontFamily="sans-serif"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdpp"
                android:background="@drawable/rounded_corner_bg_white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/club_name"
                        android:layout_toStartOf="@id/tv_club_name"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/subTextColor"/>

                    <TextView
                        android:id="@+id/tv_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif"
                        android:text="club name"
                        android:textColor="@color/blueColorNew" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdpp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separatorColor"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/date"
                        android:layout_toStartOf="@id/tv_date"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/subTextColor"/>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="date"
                        android:fontFamily="sans-serif"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/blueColorNew"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdpp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separatorColor"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/time"
                        android:layout_toStartOf="@id/tv_time"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/subTextColor"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="time"
                        android:fontFamily="sans-serif"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/blueColorNew"/>

                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_booking_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/big_btn_bg"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/go_to_booking_list"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/whiteColor"
                    android:fontFamily="sans-serif"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_btn_bg"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/create_match"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/whiteColor"
                    android:fontFamily="sans-serif"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_formation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:background="@drawable/booking_list_btn_border"
                android:text="@string/formation"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/blueColorNew"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/_15sdpp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_35sdpp"
            android:layout_height="@dimen/_35sdpp"
            android:src="@drawable/close_btn"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdpp"
            android:layout_marginEnd="@dimen/_10sdpp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>