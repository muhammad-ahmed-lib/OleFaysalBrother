<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:id="@+id/rel_main_data"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="@dimen/_10sdpp"
            android:layout_marginStart="@dimen/_5sdpp"
            android:layout_marginEnd="@dimen/_5sdpp"
            android:layout_marginTop="@dimen/_10sdpp"
            android:layout_marginBottom="@dimen/_10sdpp"
            app:contentPadding="@dimen/_5sdpp"
            android:elevation="@dimen/_4sdpp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/emoji_vu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/emoji_img_vu"
                        android:layout_width="@dimen/_50sdpp"
                        android:layout_height="@dimen/_50sdpp"
                        android:scaleType="centerInside"
                        android:translationZ="@dimen/_90sdpp"
                        android:layout_gravity="center"
                        android:src="@drawable/playerl" />

                    <ImageView
                        android:id="@+id/shirt"
                        android:layout_width="@dimen/_50sdpp"
                        android:layout_height="@dimen/_50sdpp"
                        android:layout_marginTop="@dimen/_minus5sdpp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/shirtl" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/dubai_bold"
                        android:lines="1"
                        android:layout_gravity="center"
                        android:text="Mohammad"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dubai_light"
                        android:layout_gravity="center"
                        android:text="+971 123 4455"
                        android:textColor="#707070"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/add_player"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:src="@drawable/plus"
                android:background="@null"
                android:scaleType="centerInside" />


        </androidx.cardview.widget.CardView>

</RelativeLayout>