<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdpp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_vu"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_width="@dimen/_40sdpp"
        android:layout_height="@dimen/_40sdpp"
        android:background="@drawable/date_bg_border"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="@dimen/_1sdpp"
        app:strokeColor="#696969"
        app:cardCornerRadius="@dimen/_20sdpp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/selected_circle"/>

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#696969"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>