<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogs.OleResultFilterDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdpp"
            android:background="@color/bgVuColor">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter"
                android:textColor="@color/darkTextColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_15sdpp"
            android:paddingStart="@dimen/_15sdpp"
            android:paddingBottom="@dimen/_15sdpp"
            android:layout_marginTop="@dimen/_40sdpp"
            android:background="@color/bgVuColor"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:background="@drawable/rounded_corner_bg_white"
                android:layout_marginTop="@dimen/_5sdpp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/player_name_phone"
                    android:textColor="@color/blueColorNew"
                    android:background="@null"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:inputType="text"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:background="@drawable/rounded_corner_bg_white"
                android:layout_marginTop="@dimen/_10sdpp">

                <EditText
                    android:id="@+id/et_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/from_date"
                    android:textColor="@color/blueColorNew"
                    android:background="@null"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:background="@drawable/rounded_corner_bg_white"
                android:layout_marginTop="@dimen/_10sdpp">

                <EditText
                    android:id="@+id/et_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/to_date"
                    android:textColor="@color/blueColorNew"
                    android:background="@null"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_20sdpp"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_btn_bg"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/apply"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>