<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgVuColor"
    tools:context=".owner.OleCreatePromotionActivity">

    <include
        android:id="@+id/bar"
        layout="@layout/oleapp_bar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_15sdpp"
        android:layout_marginEnd="@dimen/_15sdpp"
        android:layout_marginTop="@dimen/_15sdpp"
        android:layout_below="@id/bar">

        <androidx.cardview.widget.CardView
            android:id="@+id/offer_vu"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdpp"
            app:contentPaddingLeft="@dimen/_10sdpp"
            app:contentPaddingRight="@dimen/_10sdpp"
            app:cardCornerRadius="@dimen/_10sdpp"
            app:cardBackgroundColor="@color/whiteColor"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic"
                    android:layout_width="@dimen/_35sdpp"
                    android:layout_height="@dimen/_35sdpp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/make_offer_ic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ic"
                    android:layout_toStartOf="@+id/arrow1"
                    android:layout_marginStart="@dimen/_10sdpp"
                    android:layout_marginEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/make_offers"
                        android:textColor="@color/darkTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/offer_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active - 0"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:textColor="@color/subTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="@dimen/_15sdpp"
                    android:layout_height="@dimen/_15sdpp"
                    android:src="@drawable/right_arrow_dark"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/promo_vu"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdpp"
            android:layout_marginTop="@dimen/_15sdpp"
            app:contentPaddingLeft="@dimen/_10sdpp"
            app:contentPaddingRight="@dimen/_10sdpp"
            app:cardCornerRadius="@dimen/_10sdpp"
            app:cardBackgroundColor="@color/whiteColor"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic2"
                    android:layout_width="@dimen/_35sdpp"
                    android:layout_height="@dimen/_35sdpp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/promo_codes_ic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ic2"
                    android:layout_toStartOf="@+id/arrow2"
                    android:layout_marginStart="@dimen/_10sdpp"
                    android:layout_marginEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/promo_codes"
                        android:textColor="@color/darkTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/promo_code_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active - 0"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:textColor="@color/subTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="@dimen/_15sdpp"
                    android:layout_height="@dimen/_15sdpp"
                    android:src="@drawable/right_arrow_dark"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/discount_vu"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdpp"
            android:layout_marginTop="@dimen/_15sdpp"
            app:contentPaddingLeft="@dimen/_10sdpp"
            app:contentPaddingRight="@dimen/_10sdpp"
            app:cardCornerRadius="@dimen/_10sdpp"
            app:cardBackgroundColor="@color/whiteColor"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic3"
                    android:layout_width="@dimen/_35sdpp"
                    android:layout_height="@dimen/_35sdpp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/discount_card_ic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ic3"
                    android:layout_toStartOf="@+id/arrow3"
                    android:layout_marginStart="@dimen/_10sdpp"
                    android:layout_marginEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loyalty_cards"
                        android:textColor="@color/darkTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/discount_card_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active - 0"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:textColor="@color/subTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="@dimen/_15sdpp"
                    android:layout_height="@dimen/_15sdpp"
                    android:src="@drawable/right_arrow_dark"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>