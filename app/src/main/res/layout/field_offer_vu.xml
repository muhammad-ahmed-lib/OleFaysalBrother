<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdpp"
        android:layout_marginStart="@dimen/_5sdpp"
        android:layout_marginEnd="@dimen/_5sdpp"
        android:layout_marginBottom="@dimen/_5sdpp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/_15sdpp"
        app:contentPadding="@dimen/_10sdpp"
        android:fitsSystemWindows="true"
        app:cardElevation="0.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/club_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/v5grayColor"
                    app:cardCornerRadius="@dimen/_100sdpp"
                    app:cardElevation="0dp"
                    app:contentPaddingBottom="@dimen/_1sdpp"
                    app:contentPaddingLeft="@dimen/_4sdpp"
                    app:contentPaddingRight="@dimen/_4sdpp"
                    app:contentPaddingTop="@dimen/_1sdpp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_12sdpp"
                            android:layout_height="@dimen/_12sdpp"
                            android:src="@drawable/v5_club_ic_new"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5sdpp" />

                        <TextView
                            android:id="@+id/tv_club_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:layout_marginStart="@dimen/_5sdpp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/club_name"
                            android:textColor="@color/v5_text_color" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/v5greenColor"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/_100sdpp"
                    app:cardElevation="0dp"
                    app:contentPaddingBottom="@dimen/_2sdpp"
                    app:contentPaddingLeft="@dimen/_5sdpp"
                    app:contentPaddingRight="@dimen/_5sdpp"
                    app:contentPaddingTop="@dimen/_2sdpp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="30%off"
                            android:textColor="@color/whiteColor" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="@color/whiteColor"
                app:cardCornerRadius="@dimen/_10sdpp"
                android:layout_marginTop="@dimen/_10sdpp"
                app:cardElevation="0dp"
                app:strokeColor="@color/separatorColor"
                app:strokeWidth="@dimen/_1sdpp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/promo_img"
                        android:layout_width="@dimen/_35sdpp"
                        android:layout_height="@dimen/_35sdpp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdpp"
                        android:scaleType="centerInside"
                        android:src="@drawable/field_offer_ic" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#C9C9C9"
                        android:layout_marginStart="@dimen/_10sdpp"
                        android:layout_marginEnd="@dimen/_10sdpp"
                        android:layout_marginTop="@dimen/_20sdpp"
                        android:layout_marginBottom="@dimen/_20sdpp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdpp"
                            android:layout_marginEnd="@dimen/_5sdpp"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="OLE Field Offer"
                            android:textSize="@dimen/_14sdpp"
                            android:textColor="@color/v5_text_color" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01/05/2020 to 20/05/2020"
                            android:layout_marginStart="@dimen/_5sdpp"
                            android:layout_marginTop="@dimen/_5sdpp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:textSize="@dimen/_14sdpp"
                            android:textStyle="bold"
                            android:textColor="@color/v5greenColor"/>


                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_promo"
                    android:layout_width="@dimen/_40sdpp"
                    android:layout_height="@dimen/_40sdpp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@color/v5greenColor"
                    app:cardCornerRadius="@dimen/_100sdpp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/_10sdpp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:layout_width="@dimen/_20sdpp"
                        android:layout_height="@dimen/_20sdpp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/v5_owner_right_arrow" />

                </com.google.android.material.card.MaterialCardView>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdpp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/completed_booking_lay"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/v5grayColor"
                    app:cardCornerRadius="@dimen/_10sdpp"
                    app:cardElevation="0dp"
                    app:contentPaddingBottom="@dimen/_1sdpp"
                    app:contentPaddingLeft="@dimen/_4sdpp"
                    app:contentPaddingRight="@dimen/_4sdpp"
                    app:contentPaddingTop="@dimen/_1sdpp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_total_bookings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="4000"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdpp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:textColor="@color/v5_text_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="Completed \nBookings"
                            android:textSize="@dimen/_14sdpp"
                            android:layout_below="@+id/tv_total_bookings"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginTop="@dimen/_5sdpp"
                            android:textColor="@color/v5_text_hint_color_grey" />

                        <ImageView
                            android:layout_width="@dimen/_20sdpp"
                            android:layout_height="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:padding="@dimen/_5sdpp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/right_arrow_darkl" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/total_player_lay"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/v5grayColor"
                    app:cardCornerRadius="@dimen/_10sdpp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="@dimen/_10sdpp"
                    app:contentPaddingBottom="@dimen/_1sdpp"
                    app:contentPaddingLeft="@dimen/_4sdpp"
                    app:contentPaddingRight="@dimen/_4sdpp"
                    app:contentPaddingTop="@dimen/_1sdpp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_total_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="354"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdpp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:textColor="@color/v5_text_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="Total \nDiscount"
                            android:textSize="@dimen/_14sdpp"
                            android:layout_below="@+id/tv_total_discount"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginTop="@dimen/_5sdpp"
                            android:textColor="@color/v5_text_hint_color_grey" />

                        <ImageView
                            android:layout_width="@dimen/_20sdpp"
                            android:layout_height="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:padding="@dimen/_5sdpp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/right_arrow_darkl" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/player_payment_lay"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/v5grayColor"
                    app:cardCornerRadius="@dimen/_10sdpp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="@dimen/_10sdpp"
                    app:contentPaddingBottom="@dimen/_1sdpp"
                    app:contentPaddingLeft="@dimen/_4sdpp"
                    app:contentPaddingRight="@dimen/_4sdpp"
                    app:contentPaddingTop="@dimen/_1sdpp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_new_user_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="14000"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdpp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:textColor="@color/v5_text_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="New \nUsers"
                            android:textSize="@dimen/_14sdpp"
                            android:layout_below="@+id/tv_new_user_count"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginTop="@dimen/_5sdpp"
                            android:textColor="@color/v5_text_hint_color_grey" />

                        <ImageView
                            android:layout_width="@dimen/_20sdpp"
                            android:layout_height="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:padding="@dimen/_5sdpp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/_10sdpp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/right_arrow_darkl" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/days_recycler_vu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdpp"
                android:layout_marginTop="@dimen/_10sdpp"
                android:layout_marginBottom="@dimen/_10sdpp"
                android:layoutDirection="ltr"
                android:scrollbars="none"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>