<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DE18707B"
    android:padding="@dimen/_20sdpp"
    tools:context=".dialogs.StartLineupDialogFragment">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="@dimen/_35sdpp"
        android:layout_height="@dimen/_35sdpp"
        android:background="@null"
        android:scaleType="centerInside"
        android:layout_marginTop="@dimen/_30sdpp"
        android:src="@drawable/close_btnl" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/btn_close"
        android:layout_marginTop="@dimen/_15sdpp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_date"
                android:layout_marginTop="@dimen/_40sdpp"
                android:textColor="@color/whiteColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:hint="dd/MM/yyyy"
                    android:inputType="date"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor"
                    android:textCursorDrawable="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_time"
                android:layout_marginTop="@dimen/_15sdpp"
                android:textColor="@color/whiteColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="hh:mm"
                    android:inputType="time"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor"
                    android:textCursorDrawable="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_no_of_players"
                android:layout_marginTop="@dimen/_15sdpp"
                android:textColor="@color/whiteColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_players"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="@string/no_of_players"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor"
                    android:textCursorDrawable="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stadium Name ( Optional )"
                android:layout_marginTop="@dimen/_15sdpp"
                android:textColor="@color/whiteColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_stadium_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="Enter Stadium Name"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City Name ( Optional )"
                android:layout_marginTop="@dimen/_15sdpp"
                android:textColor="@color/whiteColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="Enter City Name"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_30sdpp"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_btn_lineupl"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/start_lineup"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>