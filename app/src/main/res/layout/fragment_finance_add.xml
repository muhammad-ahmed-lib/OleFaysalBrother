<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.FinanceAddFragment">

        <RelativeLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/income_detail_bg"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent=".6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdpp">

                <RelativeLayout
                    android:id="@+id/card_vu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdpp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <ImageButton
                        android:id="@+id/btn_close"
                        android:layout_width="@dimen/_40sdpp"
                        android:layout_height="@dimen/_40sdpp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/close_button" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_add_income"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdpp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdpp"
                        app:cardCornerRadius="@dimen/_50sdpp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/greenColor"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdpp"
                            android:fontFamily="@font/dubai_bold"
                            android:gravity="start|center_vertical"
                            android:text="@string/income"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="@dimen/_35sdpp"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/cloud_icon" />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_add_expense"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdpp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdpp"
                        app:cardCornerRadius="@dimen/_50sdpp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/red"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdpp"
                            android:fontFamily="@font/dubai_bold"
                            android:gravity="start|center_vertical"
                            android:text="@string/expense"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="@dimen/_35sdpp"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/cloud_icon"
                            android:rotation="180"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_add_upcoming_expense"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdpp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdpp"
                        app:cardCornerRadius="@dimen/_50sdpp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/orangeColor"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdpp"
                            android:fontFamily="@font/dubai_bold"
                            android:gravity="start|center_vertical"
                            android:text="@string/upcoming_expenses"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="@dimen/_35sdpp"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/cloud_icon"
                            android:rotation="180"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_pay_salary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdpp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdpp"
                        app:cardCornerRadius="@dimen/_50sdpp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueColorNew"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdpp"
                            android:fontFamily="@font/dubai_bold"
                            android:gravity="start|center_vertical"
                            android:text="@string/pay_salary"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="@dimen/_35sdpp"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/cloud_icon"
                            android:rotation="180"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_pay_partner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdpp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdpp"
                        app:cardCornerRadius="@dimen/_50sdpp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/dark_blue"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdpp"
                            android:fontFamily="@font/dubai_bold"
                            android:gravity="start|center_vertical"
                            android:text="@string/pay_to_partner"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="@dimen/_35sdpp"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_20sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/cloud_icon"
                            android:rotation="180"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

