<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogs.OleAddFootballScoreDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:cardBackgroundColor="@color/bgVuColor"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdpp"
            android:paddingEnd="@dimen/_15sdpp"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/match_score"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/greenColor"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_team_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/darkTextColor"
                android:layout_marginTop="@dimen/_10sdpp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:background="@drawable/rounded_corner_bg_white"
                android:layout_marginTop="@dimen/_5sdpp">

                <EditText
                    android:id="@+id/et_team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/score"
                    android:textColor="@color/blueColorNew"
                    android:background="@null"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:inputType="number"
                    android:digits="1234567890"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_team_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/darkTextColor"
                android:layout_marginTop="@dimen/_10sdpp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:background="@drawable/rounded_corner_bg_white"
                android:layout_marginTop="@dimen/_5sdpp"
                android:layout_marginBottom="@dimen/_20sdpp">

                <EditText
                    android:id="@+id/et_team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/score"
                    android:textColor="@color/blueColorNew"
                    android:background="@null"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:inputType="number"
                    android:digits="1234567890"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginBottom="@dimen/_20sdpp"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_btn_bg"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/add"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/whiteColor"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>