<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/rel_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/_4sdpp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="@dimen/_10sdpp"
            app:contentPadding="@dimen/_10sdpp"
            android:layout_marginTop="@dimen/_5sdpp"
            android:layout_marginStart="@dimen/_5sdpp"
            android:layout_marginEnd="@dimen/_5sdpp"
            android:layout_marginBottom="@dimen/_5sdpp">

            <ImageView
                android:id="@+id/img_vu"
                android:layout_width="@dimen/_85sdpp"
                android:layout_height="@dimen/_85sdpp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/partner_temp_img"
                android:scaleType="centerInside"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_100sdpp"
                android:layout_marginBottom="@dimen/_10sdpp"
                android:ellipsize="end"
                android:fontFamily="@font/dubai_light"
                android:lines="1"
                android:text="@string/name"
                android:textColor="#707070"
                android:textSize="18sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="@dimen/_60sdpp"
                android:layout_height="@dimen/_35sdpp"
                android:background="@drawable/fav_count_bg"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_90sdpp"
                android:layout_marginTop="@dimen/_20sdpp">

                <TextView
                    android:id="@+id/tv_share_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="000%"
                    android:textColor="@color/darkTextColor" />
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/_2sdpp"
                android:layout_marginStart="-3dp"
                android:layout_marginBottom="@dimen/_1sdpp"
                android:src="@drawable/detail_arrow" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>