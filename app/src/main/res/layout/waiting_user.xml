<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/_10sdpp"
        android:layout_marginTop="@dimen/_15sdpp"
        android:layout_marginStart="@dimen/_10sdpp"
        android:layout_marginEnd="@dimen/_10sdpp"
        app:contentPadding="@dimen/_6sdpp"
        app:cardElevation="0dp"
        app:strokeColor="@color/separatorColor"
        app:strokeWidth="@dimen/_1sdpp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/linearLayout4"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdpp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/gt_walsheim_pro_regular"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdpp">
                        <ImageView
                            android:layout_width="@dimen/_11sdpp"
                            android:layout_height="@dimen/_11sdpp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/v5_small_call_ic" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdpp"
                            android:fontFamily="@font/gt_walsheim_pro_medium"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="@string/phone"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_waiting_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdpp"
                        android:text="@string/time"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/red"
                        android:textSize="16sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_5sdpp"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/delete"
                        android:layout_width="@dimen/_40sdpp"
                        android:layout_height="@dimen/_40sdpp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="@dimen/_10sdpp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@color/redBookingColor"
                        app:cardCornerRadius="@dimen/_100sdpp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="@dimen/_20sdpp"
                            android:layout_height="@dimen/_20sdpp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/v5_delete_ic" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/call"
                        android:layout_width="@dimen/_40sdpp"
                        android:layout_height="@dimen/_40sdpp"
                        android:layout_gravity="center_vertical|end"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@color/v5greenColor"
                        app:cardCornerRadius="@dimen/_100sdpp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="@dimen/_20sdpp"
                            android:layout_height="@dimen/_20sdpp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/v5_call_ic_white" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/book"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="@dimen/_5sdpp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="@color/v5greenColor"
                app:cardCornerRadius="@dimen/_100sdpp"
                android:layout_marginBottom="@dimen/_5sdpp"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:contentPadding="@dimen/_5sdpp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gt_walsheim_pro_medium"
                    android:paddingStart="@dimen/_40sdpp"
                    android:paddingEnd="@dimen/_40sdpp"
                    android:text="@string/book_now"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdpp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




</RelativeLayout>