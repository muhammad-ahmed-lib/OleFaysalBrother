<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogs.OleUpdateCallBookingFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdpp"
        app:cardElevation="0dp">

        <ScrollView
            android:id="@+id/scroll_vu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdpp"
                android:paddingEnd="@dimen/_20sdpp">

                <RelativeLayout
                    android:layout_width="@dimen/_160sdpp"
                    android:layout_height="@dimen/_90sdpp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdpp"
                    android:background="@drawable/club_banner_bg">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="0 AED"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/blueColorNew" />

                    <View
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_7sdpp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif"
                        android:text="60 Min"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/subTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="@string/player_name"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/blueColorNew" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="0501234567"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="phone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_add_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_add_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/add_price"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="number"
                        android:digits="1234567890"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_discount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_discount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/discount_price"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="number"
                        android:digits="1234567890" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_margin="@dimen/_20sdpp"
                    app:cardCornerRadius="@dimen/_5sdpp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/green_btn_bg"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/update"
                        android:gravity="center"
                        android:textColor="@color/whiteColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>