<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:background="@drawable/rounded_corner_bg_white_no_padding"
    android:padding="@dimen/_10sdpp"
    android:layout_marginTop="@dimen/_5sdpp"
    android:layout_marginStart="@dimen/_15sdpp"
    android:layout_marginEnd="@dimen/_15sdpp">

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/btn_delete"
        android:layout_marginEnd="@dimen/_7sdpp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blueColorNew"
            android:text="@string/name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tv_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkTextColor"
            android:text="30 players"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_5sdpp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/_30sdpp"
        android:layout_height="@dimen/_30sdpp"
        android:src="@drawable/delete_ic"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_centerVertical="true"
        android:padding="@dimen/_3sdpp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>