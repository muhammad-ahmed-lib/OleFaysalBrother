<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE18707B"
    tools:context=".activities.SuggestJerseyActivity">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdpp"
        android:layout_marginTop="@dimen/_30sdpp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/suggest_jersey"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/whiteColor"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_30sdpp"
            android:layout_height="@dimen/_30sdpp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdpp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/close_btnl" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:layout_marginTop="@dimen/_20sdpp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdpp"
            android:layout_marginEnd="@dimen/_20sdpp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdpp">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_card"
                android:layout_width="@dimen/_110sdpp"
                android:layout_height="@dimen/_110sdpp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdpp"
                app:cardBackgroundColor="#33000000"
                app:cardCornerRadius="@dimen/_10sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/img_vu_place"
                    android:layout_width="@dimen/_40sdpp"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/cam_ic2l" />

                <ImageView
                    android:id="@+id/shirt_img_vu"
                    android:layout_width="@dimen/_100sdpp"
                    android:layout_height="@dimen/_100sdpp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:background="@color/transparent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/add_shirt_photo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/whiteColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginStart="@dimen/_5sdpp"
                android:layout_marginTop="@dimen/_20sdpp"
                android:layout_marginEnd="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_shirt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_shirt_name"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginStart="@dimen/_5sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                android:layout_marginEnd="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_country_name"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginStart="@dimen/_5sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                android:layout_marginEnd="@dimen/_5sdpp"
                android:background="@drawable/login_fields_bgl">

                <EditText
                    android:id="@+id/et_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_year"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginStart="@dimen/_5sdpp"
                android:layout_marginTop="@dimen/_30sdpp"
                android:layout_marginEnd="@dimen/_5sdpp"
                app:cardCornerRadius="@dimen/_2sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/green_btn_lineupl" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/whiteColor" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>