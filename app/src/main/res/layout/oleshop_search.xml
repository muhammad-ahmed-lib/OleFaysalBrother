<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:minHeight="@dimen/_50sdpp"
        android:layout_toStartOf="@+id/btn_arrow"
        android:layout_marginStart="@dimen/_10sdpp"
        android:layout_marginTop="@dimen/_5sdpp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/subTextColor"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/tv_item_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="item no"
            android:textColor="@color/subTextColor"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/_5sdpp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="category"
            android:textColor="@color/darkTextColor"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdpp"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_arrow"
        android:layout_width="@dimen/_30sdpp"
        android:layout_height="@dimen/_30sdpp"
        android:src="@drawable/search_arrow_ic"
        android:layout_marginEnd="@dimen/_5sdpp"
        android:scaleType="centerInside"
        android:padding="@dimen/_5sdpp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdpp"
        android:background="@color/separatorColor"
        android:layout_marginTop="@dimen/_5sdpp"
        android:layout_below="@id/linear"
        android:layout_marginStart="@dimen/_10sdpp"/>

</RelativeLayout>