<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdpp"
        android:layout_marginBottom="@dimen/_10sdpp"
        android:layout_marginStart="@dimen/_15sdpp"
        android:layout_marginEnd="@dimen/_15sdpp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stadium_vu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardBackgroundColor="@color/whiteColor"
            app:cardCornerRadius="@dimen/_10sdpp"
            app:cardElevation="0.5dp"
            app:strokeColor="@color/separatorColor"
            app:strokeWidth="@dimen/_1sdpp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdpp">

                <RelativeLayout
                    android:id="@+id/rel_lifetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="65dp"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/v5_mini_ground_ic" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/img_vu_tick"
                    android:layout_toEndOf="@+id/rel_lifetime"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gt_walsheim_pro_regular"
                        android:text="Al Tahadi Football"
                        android:textColor="@color/v5_text_color"
                        android:textSize="@dimen/_16sdpp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_5sdpp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_13sdpp"
                            android:layout_height="@dimen/_13sdpp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_5sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/loc_pin" />

                        <TextView
                            android:id="@+id/tv_loc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:lines="1"
                            android:text="Sharjah"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/subTextColor" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_vu_tick"
                    android:layout_width="@dimen/_30sdpp"
                    android:layout_height="@dimen/_30sdpp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_3sdpp"
                    android:src="@drawable/club_deselect" />

<!--                club_selected-->

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


</RelativeLayout>