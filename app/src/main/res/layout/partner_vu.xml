<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/rel_main_data"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="@dimen/_10sdpp"
            android:layout_marginStart="@dimen/_5sdpp"
            android:layout_marginEnd="@dimen/_5sdpp"
            android:layout_marginTop="@dimen/_10sdpp"
            android:layout_marginBottom="@dimen/_10sdpp"
            app:cardBackgroundColor="@color/v5greenColor"
            android:elevation="@dimen/_4sdpp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_vu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_100sdpp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdpp"
                    android:layout_centerHorizontal="true"
                    android:translationZ="-90dp"
                    app:cardBackgroundColor="@color/whiteColor">

                        <ImageView
                            android:id="@+id/img_vu"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/blue_ole_logo"/>

                    </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/top_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:layout_marginStart="@dimen/_10sdpp"
                    android:layout_marginEnd="@dimen/_5sdpp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        app:cardBackgroundColor="@color/yellowColor"
                        app:cardCornerRadius="@dimen/_100sdpp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        app:cardElevation="0dp"
                        app:contentPaddingBottom="@dimen/_2sdpp"
                        app:contentPaddingLeft="@dimen/_5sdpp"
                        app:contentPaddingRight="@dimen/_5sdpp"
                        app:contentPaddingTop="@dimen/_2sdpp">

                        <TextView
                            android:id="@+id/tv_shares"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gt_walsheim_pro_regular"
                            android:text="50%"
                            android:textSize="12sp"
                            android:textColor="@color/v5_text_color" />

                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_20sdpp"
                        android:layout_height="@dimen/_20sdpp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@color/club_selection_color"
                        app:cardCornerRadius="@dimen/_100sdpp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="@dimen/_10sdpp"
                            android:layout_height="@dimen/_10sdpp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/v5_owner_right_arrow" />

                    </com.google.android.material.card.MaterialCardView>


                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="start"
                    app:cardBackgroundColor="@color/club_selection_color"
                    app:cardCornerRadius="@dimen/_5sdpp"
                    app:cardElevation="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:layout_marginBottom="@dimen/_5sdpp"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:layout_marginEnd="@dimen/_5sdpp"
                    app:contentPaddingLeft="@dimen/_5sdpp">

                    <TextView
                        android:id="@+id/tv_net_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:fontFamily="@font/gt_walsheim_pro_regular"
                        android:text="AED 700000"
                        android:textColor="@color/yellowColor"
                        android:textSize="@dimen/_12sdpp" />

                </androidx.cardview.widget.CardView>



            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>