<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="@dimen/_5sdpp"
        android:layout_marginStart="@dimen/_15sdpp"
        android:layout_marginBottom="@dimen/_15sdpp"
        android:layout_marginTop="@dimen/_15sdpp"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:contentPadding="@dimen/_10sdpp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fast_on_call_booking"
                android:textColor="@color/darkTextColor"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_10sdpp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_football_booking"
                    android:layout_width="@dimen/_40sdpp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdpp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/football_call_booking" />

                <ImageButton
                    android:id="@+id/btn_padel_booking"
                    android:layout_width="@dimen/_40sdpp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdpp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/padel_call_booking" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="@dimen/_15sdpp"
        android:layout_marginStart="@dimen/_5sdpp"
        android:layout_marginTop="@dimen/_15sdpp"
        android:layout_marginBottom="@dimen/_15sdpp"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:contentPadding="@dimen/_10sdpp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_promotion"
                android:textColor="@color/darkTextColor"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_10sdpp">

                <ImageButton
                    android:id="@+id/btn_promotion"
                    android:layout_width="@dimen/_40sdpp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/create_promotion" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>