<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogs.OrderDoneDialogFragment">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="@dimen/_35sdpp"
        android:layout_height="@dimen/_35sdpp"
        android:src="@drawable/close_btnl"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bgVuColor"
        android:layout_marginTop="@dimen/_5sdpp"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:cardElevation="0dp"
        android:layout_below="@+id/btn_close">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdpp"
                android:layout_height="@dimen/_60sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                app:cardBackgroundColor="#5249D483"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_30sdpp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_44sdpp"
                    android:layout_height="@dimen/_44sdpp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/greenColor"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_22sdpp">

                    <ImageView
                        android:layout_width="@dimen/_20sdpp"
                        android:layout_height="@dimen/_20sdpp"
                        android:src="@drawable/tick_white_icl"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/successfully"
                android:textColor="@color/darkTextColor"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/_15sdpp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_has_been_placed"
                android:textColor="@color/subTextColor"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/_10sdpp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_track"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginStart="@dimen/_20sdpp"
                android:layout_marginEnd="@dimen/_20sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_btn_bgl"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/track_items"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/whiteColor"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginBottom="@dimen/_15sdpp"
                android:layout_marginStart="@dimen/_20sdpp"
                android:layout_marginEnd="@dimen/_20sdpp"
                android:layout_marginTop="@dimen/_10sdpp"
                app:cardBackgroundColor="@color/whiteColor"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/continue_shoping"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/subTextColor"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>