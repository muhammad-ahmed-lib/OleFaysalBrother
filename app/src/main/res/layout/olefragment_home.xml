<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgVuColor"
    tools:context=".fragments.OleHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/p_club_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/p_club_bg"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/p_padel_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/p_padel_bg"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_vu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdpp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_menu"
                android:layout_width="@dimen/_55sdpp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/img_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/pmenu_ic" />


                    <LinearLayout
                        android:id="@+id/emoji_vu"
                        android:layout_width="21dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/emoji_img_vu"
                            android:layout_width="20dp"
                            android:layout_height="17dp"
                            android:elevation="4dp"
                            android:layout_marginBottom="@dimen/_minus2sdpp"
                            android:scaleType="centerInside"
                            android:translationZ="90dp"/>

                        <ImageView
                            android:id="@+id/shirt_img_vu"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:elevation="2dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/bibl" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!--            <View-->
            <!--                android:id="@+id/vu"-->
            <!--                android:layout_width="@dimen/_1sdpp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:background="#3B707070"-->
            <!--                android:layout_toEndOf="@id/rel_menu"-->
            <!--                android:layout_marginTop="@dimen/_5sdpp"-->
            <!--                android:layout_marginBottom="@dimen/_5sdpp"/>-->

            <LinearLayout
                android:id="@+id/module_switch_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/linear"
                android:layout_toEndOf="@id/rel_menu"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">
<!--                android:layout_alignParentTop="true"-->
<!--                android:layout_marginBottom="0dp"-->
<!--                android:layout_marginTop="0dp"-->



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/p_clubs"
                    android:layout_width="@dimen/_75sdpp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:scaleType="centerInside"
                    android:src="@drawable/p_clubs" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/p_lineup"
                    android:layout_width="@dimen/_75sdpp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:scaleType="centerInside"
                    android:src="@drawable/p_lineup" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/p_padel"
                    android:layout_width="@dimen/_75sdpp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:scaleType="centerInside"
                    android:src="@drawable/p_padel" />
                </RelativeLayout>
            </LinearLayout>

            <!--                <TextView-->
            <!--                    android:id="@+id/tv_search"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="@string/search_club"-->
            <!--                    android:textColor="#979FB3"-->
            <!--                    android:layout_marginStart="@dimen/_5sdpp"-->
            <!--                    android:fontFamily="sans-serif"/>-->

            <!--            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rel_filter"
                    android:layout_width="@dimen/_35sdpp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end">

                    <ImageView
                        android:id="@+id/img_vu_filter"
                        android:layout_width="@dimen/_37sdpp"
                        android:layout_height="@dimen/_35sdpp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/p_filter" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/_5sdpp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:layout_marginBottom="@dimen/_5sdpp" />

                <RelativeLayout
                    android:id="@+id/rel_notif"
                    android:layout_width="@dimen/_35sdpp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end">

                    <ImageView
                        android:id="@+id/img_vu_notif"
                        android:layout_width="@dimen/_35sdpp"
                        android:layout_height="@dimen/_35sdpp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/p_bell_icon" />

                    <com.nex3z.notificationbadge.NotificationBadge
                        android:id="@+id/toolbar_badge"
                        android:layout_width="@dimen/_22sdpp"
                        android:layout_height="@dimen/_22sdpp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_18sdpp"
                        android:layout_marginEnd="@dimen/_1sdpp"
                        android:background="@drawable/badge_bg_with_shadow"
                        android:clickable="false"
                        android:textAlignment="center"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_8sdpp"
                        android:visibility="visible"
                        app:nbMaxTextLength="3" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ae.oleapp.external.OleOnlyVerticalSwipeRefreshLayout
        android:id="@+id/pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_vu"
        android:layout_marginTop="@dimen/_15sdpp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdpp"
                        android:layout_marginEnd="@dimen/_15sdpp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/btn_club_see_all"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/nearby_clubs"
                            android:textColor="@color/darkTextColor" />

                        <Button
                            android:id="@+id/btn_club_see_all"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:fontFamily="sans-serif"
                            android:gravity="end|center_vertical"
                            android:text="@string/see_all"
                            android:textAllCaps="false"
                            android:textColor="@color/blueColorNew"
                            tools:ignore="TouchTargetSizeCheck" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/club_recycler_vu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rel"
                        android:orientation="horizontal"
                        android:scrollbars="none" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdpp">

                    <RelativeLayout
                        android:id="@+id/rel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdpp"
                        android:layout_marginEnd="@dimen/_15sdpp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/btn_match_see_all"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/nearby_matches"
                            android:textColor="@color/darkTextColor" />

                        <Button
                            android:id="@+id/btn_match_see_all"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:fontFamily="sans-serif"
                            android:gravity="end|center_vertical"
                            android:text="@string/see_all"
                            android:textAllCaps="false"
                            android:textColor="@color/blueColorNew"
                            tools:ignore="TouchTargetSizeCheck" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/match_recycler_vu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rel2"
                        android:scrollbars="none" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdpp">

                    <RelativeLayout
                        android:id="@+id/rel3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdpp"
                        android:layout_marginEnd="@dimen/_15sdpp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/btn_notif_see_all"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/notifications_promotions"
                            android:textColor="@color/darkTextColor" />

                        <Button
                            android:id="@+id/btn_notif_see_all"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:fontFamily="sans-serif"
                            android:gravity="end|center_vertical"
                            android:text="@string/see_all"
                            android:textAllCaps="false"
                            android:textColor="@color/blueColorNew"
                            android:visibility="invisible" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/notif_recycler_vu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_135sdpp"
                        android:layout_below="@id/rel3"
                        android:scrollbars="none" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:layout_marginBottom="@dimen/_10sdpp">

                    <RelativeLayout
                        android:id="@+id/rel4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdpp"
                        android:layout_marginEnd="@dimen/_15sdpp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/btn_result_see_all"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/match_result"
                            android:textColor="@color/darkTextColor" />

                        <Button
                            android:id="@+id/btn_result_see_all"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdpp"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:fontFamily="sans-serif"
                            android:gravity="end|center_vertical"
                            android:text="@string/see_all"
                            android:textAllCaps="false"
                            android:textColor="@color/blueColorNew" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/result_recycler_vu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rel4"
                        android:scrollbars="none" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </ae.oleapp.external.OleOnlyVerticalSwipeRefreshLayout>

