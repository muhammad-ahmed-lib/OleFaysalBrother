<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgVuColor"
    tools:context=".owner.OleCreatePromoCodeActivity">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/title_bar"
            layout="@layout/oleapp_bar_main"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="@string/delete"
            android:textColor="@color/blueColorNew"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdpp"
            android:paddingEnd="@dimen/_15sdpp"
            android:paddingBottom="@dimen/_10sdpp">

            <LinearLayout
                android:id="@+id/club_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdpp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/select_club"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/club_recycler_vu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:layoutDirection="ltr"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/select_field"
                android:layout_marginTop="@dimen/_15sdpp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/darkTextColor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/field_recycler_vu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_10sdpp"
                android:layoutDirection="ltr"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpp"
                android:background="@drawable/settings_field_bg"
                android:orientation="vertical"
                android:padding="@dimen/_15sdpp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/add_club_field_border">

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdpp"
                        android:layout_marginEnd="@dimen/_10sdpp"
                        android:background="@null"
                        android:hint="@string/title"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/blueColorNew" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border">

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdpp"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_toStartOf="@id/btn_generate"
                        android:background="@null"
                        android:hint="@string/promo_code"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/blueColorNew" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_generate"
                        android:layout_width="@dimen/_70sdpp"
                        android:layout_height="@dimen/_30sdpp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        app:cardBackgroundColor="@color/blueColorNew"
                        app:cardCornerRadius="@dimen/_15sdpp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="@string/generate"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/whiteColor" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/select_date_range"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdpp"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_weight="1"
                        android:background="@drawable/add_club_field_border">

                        <EditText
                            android:id="@+id/et_from_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginEnd="@dimen/_35sdpp"
                            android:background="@null"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:hint="@string/dd_mm_yyyy"
                            android:inputType="date"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                        <ImageView
                            android:layout_width="@dimen/_25sdpp"
                            android:layout_height="@dimen/_25sdpp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_5sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/calendar_blue_new" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdpp"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:layout_weight="1"
                        android:background="@drawable/add_club_field_border">

                        <EditText
                            android:id="@+id/et_to_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdpp"
                            android:layout_marginEnd="@dimen/_35sdpp"
                            android:background="@null"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:hint="@string/dd_mm_yyyy"
                            android:inputType="date"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                        <ImageView
                            android:layout_width="@dimen/_25sdpp"
                            android:layout_height="@dimen/_25sdpp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_5sdpp"
                            android:scaleType="centerInside"
                            android:src="@drawable/calendar_blue_new" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpp"
                android:background="@drawable/settings_field_bg"
                android:orientation="vertical"
                android:padding="@dimen/_15sdpp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/perc_vu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp"
                        app:contentPaddingLeft="@dimen/_15sdpp"
                        app:contentPaddingRight="@dimen/_15sdpp"
                        app:strokeColor="@color/separatorColor"
                        app:strokeWidth="@dimen/_1sdpp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_perc"
                                android:layout_width="@dimen/_15sdpp"
                                android:layout_height="@dimen/_15sdpp"
                                android:scaleType="centerInside"
                                android:src="@drawable/uncheck" />

                            <TextView
                                android:id="@+id/tv_perc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdpp"
                                android:fontFamily="sans-serif"
                                android:text="@string/percentage"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkTextColor" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/amount_vu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp"
                        app:contentPaddingLeft="@dimen/_15sdpp"
                        app:contentPaddingRight="@dimen/_15sdpp"
                        app:strokeColor="@color/separatorColor"
                        app:strokeWidth="@dimen/_1sdpp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_amount"
                                android:layout_width="@dimen/_15sdpp"
                                android:layout_height="@dimen/_15sdpp"
                                android:scaleType="centerInside"
                                android:src="@drawable/uncheck" />

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdpp"
                                android:fontFamily="sans-serif"
                                android:text="@string/amount"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkTextColor" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/disc_perc_vu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/card3"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:fontFamily="sans-serif"
                        android:text="@string/discount_perc"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="@dimen/_60sdpp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:layout_marginBottom="@dimen/_3sdpp"
                        app:cardBackgroundColor="@color/bgVuColor"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/et_perc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:hint="0%"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/one_hour_vu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_toStartOf="@+id/card4"
                        android:fontFamily="sans-serif"
                        android:text="@string/one_hour_discount"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="@dimen/_60sdpp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/tv_currency1"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:layout_marginBottom="@dimen/_3sdpp"
                        app:cardBackgroundColor="@color/bgVuColor"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/et_one_hour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_currency1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif"
                        android:text="@string/aed"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/one_half_hour_vu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_toStartOf="@+id/card5"
                        android:fontFamily="sans-serif"
                        android:text="@string/one_half_hour_discount"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card5"
                        android:layout_width="@dimen/_60sdpp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/tv_currency2"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:layout_marginBottom="@dimen/_3sdpp"
                        app:cardBackgroundColor="@color/bgVuColor"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/et_one_half_hour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_currency2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif"
                        android:text="@string/aed"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/two_hour_vu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_toStartOf="@+id/card6"
                        android:fontFamily="sans-serif"
                        android:text="@string/two_hour_discount"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card6"
                        android:layout_width="@dimen/_60sdpp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/tv_currency3"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:layout_marginBottom="@dimen/_3sdpp"
                        app:cardBackgroundColor="@color/bgVuColor"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/et_two_hour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_currency3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif"
                        android:text="@string/aed"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpp"
                android:background="@drawable/settings_field_bg"
                android:orientation="vertical"
                android:padding="@dimen/_15sdpp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/limited_vu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp"
                        app:contentPaddingLeft="@dimen/_15sdpp"
                        app:contentPaddingRight="@dimen/_15sdpp"
                        app:strokeColor="@color/separatorColor"
                        app:strokeWidth="@dimen/_1sdpp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_limit"
                                android:layout_width="@dimen/_15sdpp"
                                android:layout_height="@dimen/_15sdpp"
                                android:scaleType="centerInside"
                                android:src="@drawable/uncheck" />

                            <TextView
                                android:id="@+id/tv_limit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdpp"
                                android:fontFamily="sans-serif"
                                android:text="@string/limited_use"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkTextColor" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/unlimited_vu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdpp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp"
                        app:contentPaddingLeft="@dimen/_15sdpp"
                        app:contentPaddingRight="@dimen/_15sdpp"
                        app:strokeColor="@color/separatorColor"
                        app:strokeWidth="@dimen/_1sdpp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_unlimit"
                                android:layout_width="@dimen/_15sdpp"
                                android:layout_height="@dimen/_15sdpp"
                                android:scaleType="centerInside"
                                android:src="@drawable/uncheck" />

                            <TextView
                                android:id="@+id/tv_unlimit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdpp"
                                android:fontFamily="sans-serif"
                                android:text="@string/unlimited_use"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkTextColor" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/limit_vu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/card"
                        android:fontFamily="sans-serif"
                        android:text="@string/limit"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="@dimen/_60sdpp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:layout_marginBottom="@dimen/_3sdpp"
                        app:cardBackgroundColor="@color/bgVuColor"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/et_limit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdpp"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:background="@drawable/add_club_field_border"
                    android:paddingStart="@dimen/_10sdpp"
                    android:paddingEnd="@dimen/_10sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_toStartOf="@+id/card2"
                        android:fontFamily="sans-serif"
                        android:text="@string/how_many_time_each_player_can_use"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="@dimen/_60sdpp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_3sdpp"
                        android:layout_marginBottom="@dimen/_3sdpp"
                        app:cardBackgroundColor="@color/bgVuColor"
                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/et_player_limit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/blueColorNew" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/players"
                android:layout_marginTop="@dimen/_10sdpp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/darkTextColor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/players_recycler_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/_10sdpp"/>

            <RelativeLayout
                android:id="@+id/rel_add_player"
                android:layout_width="@dimen/_200sdpp"
                android:layout_height="@dimen/_35sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/add_card_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/add_players"
                    android:textColor="@color/greenColor" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdpp"
                android:background="@drawable/club_banner_bg"
                android:layout_marginTop="@dimen/_15sdpp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_vu_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/_10sdpp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_40sdpp"
                        android:layout_height="@dimen/_40sdpp"
                        android:src="@drawable/club_banner_ic"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_image"
                        android:textColor="@color/subTextColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_marginTop="@dimen/_2sdpp"/>

                </LinearLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdpp"
                android:layout_marginTop="@dimen/_15sdpp"
                android:layout_marginBottom="@dimen/_5sdpp"
                app:cardCornerRadius="@dimen/_5sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/green_btn_bg" />

                <TextView
                    android:id="@+id/tv_btntitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/add_now"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/whiteColor" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>