<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_10sdp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:id="@+id/checkBoxImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/side_menu_check_box"/>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/titleTV"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:text="Rank"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="@id/checkBoxImg"
        app:layout_constraintBottom_toBottomOf="@id/checkBoxImg"
        app:layout_constraintStart_toEndOf="@id/checkBoxImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#26334A" />
    <View
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxImg"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#EBEBEB"/>

</androidx.constraintlayout.widget.ConstraintLayout>