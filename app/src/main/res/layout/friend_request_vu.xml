<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_partner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdpp"
        android:layout_gravity="center"
        android:background="@drawable/f_request_bg"
        android:elevation="@dimen/_4sdpp"
        app:cardCornerRadius="@dimen/_10sdpp"
        app:contentPadding="@dimen/_10sdpp"
        android:layout_marginTop="@dimen/_10sdpp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ll1"
            android:layout_width="@dimen/_80sdpp"
            android:layout_height="@dimen/_80sdpp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#5C000000"
            app:cardCornerRadius="@dimen/_55sdpp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/emoji_vu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/emoji_img_vu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="@dimen/_10sdpp"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/shirt_img_vu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_minus4sdpp"
                    android:scaleType="centerInside"
                    android:src="@drawable/bibl" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ll1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:ellipsize="end"
                android:fontFamily="@font/dubai_light"
                android:lines="1"
                android:text="@string/name"
                android:textColor="#707070"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:ellipsize="end"
                android:fontFamily="@font/dubai_light"
                android:lines="1"
                android:text="+971 51 512 5123"
                android:textColor="#0084FF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:fontFamily="@font/dubai_light"
                android:text="Hi I'm Ole Please accept my invitation"
                android:textColor="#707070"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reject_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdpp"
                android:scaleType="centerInside"
                android:src="@drawable/reject_icon" />

            <ImageView
                android:id="@+id/accept_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdpp"
                android:scaleType="centerInside"
                android:src="@drawable/accept_icon" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>