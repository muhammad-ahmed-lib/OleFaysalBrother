<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_35sdpp"
                android:layout_height="@dimen/_35sdpp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/whiteColor"
                app:cardCornerRadius="@dimen/_3sdpp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/player_image_vu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_margin="@dimen/_2sdpp"
                    android:src="@drawable/player_active" />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blueColorNew"
                    android:fontFamily="sans-serif-medium"
                    android:text="LV: 999"
                    android:textSize="@dimen/_9sdpp"
                    android:gravity="center"
                    android:layout_gravity="bottom|end"
                    android:background="@color/yellowColor" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_q_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:text="\?"
                android:textColor="#F02301"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="sans-serif-medium"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Player"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_2sdpp"
            android:layout_marginStart="@dimen/_2sdpp"
            android:layout_marginTop="@dimen/_2sdpp"
            android:lines="1"
            android:layout_below="@+id/rel"
            android:autoSizeMinTextSize="@dimen/_8sdpp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/whiteColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="sans-serif"/>

    </RelativeLayout>

</FrameLayout>