<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgVuColor"
    tools:context=".player.OlePadelMatchShareActivity">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/title_bar"
            layout="@layout/oleplayer_app_bar_main"/>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/post"
            android:textAllCaps="false"
            android:textColor="@color/blueColorNew"
            android:padding="@dimen/_2sdpp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_vu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:layoutDirection="ltr">

        <ImageView
            android:id="@+id/field_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/story_padel"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdpp"
            android:layout_marginTop="@dimen/_15sdpp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/top_vu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_marginEnd="@dimen/_15sdpp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accept_the_challenge"
                    android:textAllCaps="true"
                    android:textColor="#0b1428"
                    android:fontFamily="@font/kanit_bold_italic"
                    android:textSize="33sp"
                    android:lines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="@string/padel_match"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteColor"
                    android:fontFamily="@font/heaters"
                    android:textSize="50sp"
                    android:lines="1"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vs_vu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdpp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_40sdpp"
            android:background="@drawable/mid_layer">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kenyan_coffee_bolditalic"
                    android:gravity="center"
                    android:minWidth="@dimen/_50sdpp"
                    android:text="V"
                    android:textColor="@color/whiteColor"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kenyan_coffee_bolditalic"
                    android:gravity="center"
                    android:minWidth="@dimen/_50sdpp"
                    android:text="S"
                    android:textColor="@color/whiteColor"
                    android:textSize="60sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_vu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#070919"
            android:padding="@dimen/_10sdpp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/kenyan_coffee_regular"
                android:text="8:00PM"
                android:textColor="@color/whiteColor"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_extrabold_italic"
                android:text="Thu, 27/09/2021"
                android:textColor="@color/whiteColor"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdpp"
            android:layout_above="@id/time_vu"
            android:layout_marginBottom="@dimen/_5sdpp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/text_down" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_20sdpp"
                android:layout_marginStart="@dimen/_20sdpp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/_100sdpp"
                    android:text="@string/challenge"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="#0b1428"
                    android:fontFamily="@font/montserrat_extrabold_italic"
                    android:textSize="30sp"
                    android:lines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/with_ole_app"
                    android:textColor="@color/whiteColor"
                    android:fontFamily="@font/heaters"
                    android:textSize="50sp"
                    android:lines="1"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vs_vu"
            android:layout_below="@+id/rel"
            android:layout_marginStart="@dimen/_25sdpp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_1"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="@dimen/_90sdpp"
                    android:background="@drawable/padel_player_bg_vu">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdpp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/_10sdpp"
                        app:cardElevation="0dp">

                        <com.rishabhharit.roundedimageview.RoundedImageView
                            android:id="@+id/p1_img_vu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/player_active"
                            app:cornerRadius="@dimen/_10sdpp" />

                        <TextView
                            android:id="@+id/tv_p1_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/level_corner"
                            android:fontFamily="@font/franklin_gothic_heavy"
                            android:gravity="center"
                            android:text="LV: 1"
                            android:textColor="#021326"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_p1_name"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_1"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:fontFamily="@font/kenyan_coffee_bold"
                    android:text=" Player Name "
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdpp">

                <RelativeLayout
                    android:id="@+id/rel_11"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="@dimen/_90sdpp"
                    android:background="@drawable/padel_player_bg_vu">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdpp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/_10sdpp"
                        app:cardElevation="0dp">

                        <com.rishabhharit.roundedimageview.RoundedImageView
                            android:id="@+id/p1_partner_img_vu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/player_active"
                            app:cornerRadius="@dimen/_10sdpp" />

                        <TextView
                            android:id="@+id/tv_p1_partner_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/level_corner"
                            android:fontFamily="@font/franklin_gothic_heavy"
                            android:gravity="center"
                            android:text="LV: 1"
                            android:textColor="#021326"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_p1_partner_name"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_11"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:fontFamily="@font/kenyan_coffee_bold"
                    android:text=" Player Name "
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_p1_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdpp"
                android:fontFamily="@font/kenyan_coffee_regular"
                android:text="C+"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rel_2"
            android:layout_below="@+id/vs_vu"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_25sdpp"
            android:layout_marginEnd="@dimen/_25sdpp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_opponent_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenyan_coffee_regular"
                android:text="C+"
                android:textAllCaps="true"
                android:layout_marginEnd="@dimen/_10sdpp"
                android:textColor="@color/whiteColor"
                android:textSize="35sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel21"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="@dimen/_90sdpp"
                    android:layout_below="@+id/tv_opponent_name"
                    android:background="@drawable/padel_player_bg_vu">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdpp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/_10sdpp"
                        app:cardElevation="0dp">

                        <com.rishabhharit.roundedimageview.RoundedImageView
                            android:id="@+id/opponent_img_vu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/player_active"
                            android:visibility="invisible"
                            app:cornerRadius="@dimen/_10sdpp" />

                        <TextView
                            android:id="@+id/tv_opponent_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/level_corner"
                            android:fontFamily="@font/franklin_gothic_heavy"
                            android:gravity="center"
                            android:text="LV: 1"
                            android:textColor="#021326"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_opponent_q_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:alpha=".7"
                        android:fontFamily="@font/franklin_gothic_heavy"
                        android:text=" ? "
                        android:textAllCaps="true"
                        android:textColor="@color/whiteColor"
                        android:textSize="70sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_opponent_name"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdpp"
                    android:fontFamily="@font/kenyan_coffee_bold"
                    android:text=" Player Name "
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdpp">

                <RelativeLayout
                    android:id="@+id/rel22"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="@dimen/_90sdpp"
                    android:layout_below="@id/tv_opponent_partner_name"
                    android:background="@drawable/padel_player_bg_vu">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdpp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/_10sdpp"
                        app:cardElevation="0dp">

                        <com.rishabhharit.roundedimageview.RoundedImageView
                            android:id="@+id/opponent_partner_img_vu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/player_active"
                            android:visibility="invisible"
                            app:cornerRadius="@dimen/_10sdpp" />

                        <TextView
                            android:id="@+id/tv_opponent_partner_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/level_corner"
                            android:fontFamily="@font/franklin_gothic_heavy"
                            android:gravity="center"
                            android:text="LV: 1"
                            android:textColor="#021326"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_opponent_partner_q_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:alpha=".7"
                        android:fontFamily="@font/franklin_gothic_heavy"
                        android:text=" ? "
                        android:textAllCaps="true"
                        android:textColor="@color/whiteColor"
                        android:textSize="70sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_opponent_partner_name"
                    android:layout_width="@dimen/_90sdpp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdpp"
                    android:fontFamily="@font/kenyan_coffee_bold"
                    android:text=" Player Name "
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_10sdpp"
            android:layout_marginStart="@dimen/_10sdpp"
            android:layout_marginBottom="@dimen/_40sdpp"
            android:layout_toEndOf="@id/time_vu"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_60sdpp"
                android:layout_height="@dimen/_60sdpp"
                android:scaleType="centerCrop"
                android:src="@drawable/map"
                app:riv_corner_radius="@dimen/_30sdpp" />

            <TextView
                android:id="@+id/tv_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdpp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Al Tahadi"
                android:gravity="center"
                android:textColor="@color/whiteColor"
                android:textSize="19sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>