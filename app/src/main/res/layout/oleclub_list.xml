                    android:text="@string/no_fields"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/darkTextColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/no_fields_desc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/subTextColor" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_add_field"
                    android:layout_width="@dimen/_150sdpp"
                    android:layout_height="@dimen/_35sdpp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:layout_marginBottom="@dimen/_5sdpp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@color/bgVuColor"
                    app:cardCornerRadius="@dimen/_5sdpp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/greenColor"
                    app:strokeWidth="@dimen/_1sdpp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/add_field"
