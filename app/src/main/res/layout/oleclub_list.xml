                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="@dimen/_30sdpp"
                        android:layout_height="@dimen/_30sdpp"
                        android:layout_marginEnd="@dimen/_3sdpp"
                        android:background="@null"
                        android:padding="@dimen/_5sdpp"
                        android:visibility="gone"
                        android:scaleType="centerInside"
                        android:src="@drawable/dot_menu" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdpp"
                android:layout_marginStart="@dimen/_5sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:layout_marginEnd="@dimen/_5sdpp"
                android:background="@color/separatorColor" />

            <RelativeLayout
                android:id="@+id/info_vu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdpp"
                android:layout_marginTop="@dimen/_5sdpp"
                android:paddingStart="@dimen/_5sdpp"
                android:paddingEnd="@dimen/_5sdpp">

                <ImageView
                    android:id="@+id/warning_tag"
                    android:layout_width="@dimen/_20sdpp"
                    android:layout_height="@dimen/_20sdpp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdpp"
                    android:scaleType="centerInside"
                    android:src="@drawable/warning_ic" />

                <TextView
                    android:id="@+id/tv_expire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdpp"
                    android:layout_toStartOf="@+id/btn_renew"
                    android:layout_toEndOf="@id/warning_tag"
                    android:fontFamily="sans-serif"
                    android:text="Expired on 25/07/2021"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/redColor" />

                <Button
                    android:id="@+id/btn_renew"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdpp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/renew_now"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/redColor" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/no_field_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdpp"
