                        app:cardCornerRadius="@dimen/_5sdpp"
                        app:cardElevation="0dp"
                        app:contentPaddingBottom="@dimen/_2sdpp"
                        app:contentPaddingLeft="@dimen/_5sdpp"
                        app:contentPaddingRight="@dimen/_5sdpp"
                        app:contentPaddingTop="@dimen/_2sdpp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdpp"
                                android:fontFamily="sans-serif-medium"
                                android:text="0.0"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/blackColor" />

                            <ImageView
                                android:layout_width="@dimen/_12sdpp"
                                android:layout_height="@dimen/_12sdpp"
                                android:scaleType="centerInside"
                                android:src="@drawable/rate_star_black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/inventory_vu"
                        android:layout_width="@dimen/_80sdpp"
