<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdpp"
        android:layout_marginTop="@dimen/_5sdpp"
        android:layout_marginEnd="@dimen/_5sdpp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/_12sdpp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="@dimen/_5sdpp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/_10sdpp"
                android:layout_marginTop="@dimen/_10sdpp"
                android:layout_marginEnd="@dimen/_10sdpp"
                android:layout_marginBottom="@dimen/_10sdpp"
                app:cardCornerRadius="@dimen/_12sdpp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_vu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bgl" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdpp"
                        android:layout_marginTop="@dimen/_10sdpp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/feature_vu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdpp"
                            app:cardBackgroundColor="@color/redColor"
                            app:cardCornerRadius="@dimen/_5sdpp"
                            app:cardElevation="0dp"
                            app:contentPaddingBottom="@dimen/_2sdpp"
                            app:contentPaddingLeft="@dimen/_5sdpp"
                            app:contentPaddingRight="@dimen/_5sdpp"
                            app:contentPaddingTop="@dimen/_2sdpp">

                            <TextView
                                android:id="@+id/tv_feature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="@string/featured"
                                android:textColor="@color/whiteColor" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/offer_vu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdpp"
                            app:cardBackgroundColor="@color/blueColorNew"
                            app:cardCornerRadius="@dimen/_5sdpp"
                            app:cardElevation="0dp"
                            app:contentPaddingBottom="@dimen/_2sdpp"
                            app:contentPaddingLeft="@dimen/_5sdpp"
                            app:contentPaddingRight="@dimen/_5sdpp"
                            app:contentPaddingTop="@dimen/_2sdpp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_offer"
                                    android:layout_width="@dimen/_15sdpp"
                                    android:layout_height="@dimen/_15sdpp"
                                    android:layout_gravity="center_vertical"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/add_offers"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/tv_offer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdpp"
                                    android:fontFamily="sans-serif"
                                    android:text="25% Off"
                                    android:textColor="@color/whiteColor" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/_5sdpp"
                        android:layout_marginBottom="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_5sdpp"
                        android:paddingTop="@dimen/_2sdpp"
                        android:paddingEnd="@dimen/_5sdpp">

                        <RelativeLayout
                            android:layout_width="@dimen/_50sdpp"
                            android:layout_height="@dimen/_35sdpp"
                            android:background="@drawable/fav_count_bg">

                            <TextView
                                android:id="@+id/tv_fav_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/_5sdpp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/darkTextColor" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/_30sdpp"
                            android:layout_height="@dimen/_30sdpp"
                            android:layout_marginBottom="@dimen/_2sdpp"
                            android:background="@drawable/fav_back">

                            <ImageButton
                                android:id="@+id/btn_fav"
                                android:layout_width="@dimen/_15sdpp"
                                android:layout_height="@dimen/_15sdpp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="2dp"
                                android:background="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/fav_green" />
                        </RelativeLayout>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/rate_vu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_45sdpp"
                        android:layout_marginEnd="@dimen/_10sdpp"
