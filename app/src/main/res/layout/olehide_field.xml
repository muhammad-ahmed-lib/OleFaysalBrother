<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdpp"
        android:layout_marginTop="@dimen/_5sdpp"
        android:layout_marginEnd="@dimen/_15sdpp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/_10sdpp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="@dimen/_7sdpp"
        app:contentPaddingRight="@dimen/_7sdpp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdpp">

                <ImageView
                    android:id="@+id/img_vu"
                    android:layout_width="@dimen/_45sdpp"
                    android:layout_height="@dimen/_45sdpp"
                    android:background="@color/whiteColor"
                    android:scaleType="centerInside"
                    android:src="@drawable/no_hide_fields" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/img_vu"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdpp"
                    android:paddingEnd="@dimen/_5sdpp">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:lines="1"
                        android:text="Maintenance"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/blueColorNew" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdpp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:lines="1"
                        android:text="06/05/2020"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdpp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:lines="1"
                        android:text="We will maintenance this field"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/subTextColor" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdpp"
                android:layout_marginTop="@dimen/_7sdpp"
                android:background="@color/separatorColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/time_ic"
                    android:layout_width="@dimen/_17sdpp"
                    android:layout_height="@dimen/_17sdpp"
                    android:layout_marginTop="@dimen/_4sdpp"
                    android:scaleType="centerInside"
                    android:src="@drawable/gray_time_ic" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:layout_marginTop="@dimen/_3sdpp"
                    android:layout_marginBottom="@dimen/_5sdpp"
                    android:layout_toEndOf="@+id/time_ic"
                    android:fontFamily="sans-serif"
                    android:text="11:30PM -12:30AM | 11:30PM -12:30AM  | 11:30PM -12:30AM | 11:30PM -12:30AM | 11:30PM -12:30AM  | 11:30PM -12:30AM"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/darkTextColor" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>