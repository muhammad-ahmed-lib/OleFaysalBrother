<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/backBtn"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="#146141"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/cross_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTv"
        app:layout_constraintTop_toTopOf="@id/backBtn"
        app:layout_constraintBottom_toBottomOf="@id/backBtn"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        android:text="@string/water_pack"
        android:gravity="center"
        android:textColor="#26334A"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/titleTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_35sdp"
        android:textColor="#868686"
        android:textColorHint="#868686"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:id="@+id/qtyEd"
        android:hint="Quantity"
        android:paddingHorizontal="@dimen/_14sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/ed_bg_sh"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dsc"
        app:layout_constraintTop_toBottomOf="@id/qtyEd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_13ssp"
        android:text="@string/enter_the_quantity_of_the_current_available_stock"
        android:gravity="center"
        android:textColor="#26334A"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/submitBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardBackgroundColor="#146141"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/dsc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/qtyEd"
        app:layout_constraintStart_toStartOf="@id/qtyEd">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/done"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>