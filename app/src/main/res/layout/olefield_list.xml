<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdpp"
        android:layout_marginEnd="@dimen/_10sdpp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/_10sdpp"
        app:cardUseCompatPadding="true"
        app:contentPaddingLeft="@dimen/_10sdpp"
        app:contentPaddingRight="@dimen/_10sdpp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/padel_image"
                    android:layout_width="@dimen/_60sdpp"
                    android:layout_height="@dimen/_60sdpp"
                    android:background="@android:color/transparent"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/_10sdpp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/img_vu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/whiteColor"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner" />

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:id="@+id/size_vu"
                    android:layout_width="@dimen/_60sdpp"
                    android:layout_height="@dimen/_60sdpp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/whiteColor"
                        android:scaleType="centerInside"
                        android:src="@drawable/size_bg_curve" />

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdpp"
                        android:layout_marginTop="@dimen/_10sdpp"
                        android:layout_marginEnd="@dimen/_10sdpp"
                        android:layout_marginBottom="@dimen/_10sdpp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:lines="1"
                        android:text="5x5"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/blueColorNew" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/btn_menu"
                    android:layout_toEndOf="@id/padel_image"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdpp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:lines="1"
                        android:text="Field One"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_5sdpp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_field_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:lines="1"
                            android:text="Outdoor"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/subTextColor" />

                        <View
                            android:id="@+id/sep_vu"
                            android:layout_width="@dimen/_1sdpp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdpp"
                            android:layout_marginTop="@dimen/_2sdpp"
                            android:layout_marginEnd="@dimen/_5sdpp"
                            android:layout_marginBottom="@dimen/_2sdpp"
                            android:background="@color/subTextColor" />

                        <TextView
                            android:id="@+id/tv_grass_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:lines="1"
                            android:text="Futsal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/subTextColor" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="@dimen/_30sdpp"
                    android:layout_height="@dimen/_30sdpp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_5sdpp"
                    android:background="@null"
                    android:padding="@dimen/_5sdpp"
                    android:scaleType="centerInside"
                    android:src="@drawable/dot_menu" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpp"
                android:layout_marginBottom="@dimen/_10sdpp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/field_price_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/one_hour"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/subTextColor" />

                    <TextView
                        android:id="@+id/tv_one_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdpp"
                        android:fontFamily="sans-serif-medium"
                        android:text="120"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_5sdpp"
                    android:layout_marginEnd="@dimen/_5sdpp"
                    android:background="@drawable/field_price_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/one_half_hour"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/subTextColor" />

                    <TextView
                        android:id="@+id/tv_one_half_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdpp"
                        android:fontFamily="sans-serif-medium"
                        android:text="160"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/field_price_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/two_hour"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/subTextColor" />

                    <TextView
                        android:id="@+id/tv_two_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdpp"
                        android:fontFamily="sans-serif-medium"
                        android:text="200"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>