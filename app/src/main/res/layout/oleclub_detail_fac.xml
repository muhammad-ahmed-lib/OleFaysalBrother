<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/add_club_field_border"
    android:layout_marginStart="@dimen/_5sdpp"
    android:layout_marginEnd="@dimen/_5sdpp"
    android:layout_marginTop="@dimen/_7sdpp"
    android:padding="@dimen/_8sdpp"
    android:orientation="vertical"
    android:id="@+id/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_vu"
            android:layout_width="@dimen/_40sdpp"
            android:layout_height="@dimen/_40sdpp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/location_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layoutDirection="ltr"
            android:layout_toEndOf="@id/img_vu"
            android:layout_marginStart="@dimen/_10sdpp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/darkTextColor" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35 AED"
                android:layout_marginTop="@dimen/_5sdpp"
                android:textColor="@color/darkTextColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="sans-serif"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>