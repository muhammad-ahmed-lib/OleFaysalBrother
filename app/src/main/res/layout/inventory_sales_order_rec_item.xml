<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/rounded_stroke_sh"
    android:layout_height="@dimen/_70sdp">
    <TextView
        android:id="@+id/quantityTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AED 345"
        android:textColor="#26334A"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gC"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50"
        android:id="@+id/gC"/>
    <TextView
        android:id="@+id/amountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Water Pack"
        android:textColor="#26334A"
        android:textStyle="bold"
        android:textSize="@dimen/_13ssp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gC"
        />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="@dimen/_60sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:id="@+id/icon"
        android:src="@drawable/ic_logo_mastercard"/>
    <TextView
        android:id="@+id/orderDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AED 345"
        android:textColor="#26334A"
        android:textSize="@dimen/_14ssp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        />
    <TextView
        android:id="@+id/orderByNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#26334A"

        android:text="Stock: 32"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@id/orderDateTv"
        app:layout_constraintTop_toBottomOf="@id/orderDateTv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/orderNoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#26334A"
        android:maxLength="16"
        android:textStyle="bold"

        android:text="Water Pack"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@id/orderDateTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/orderDateTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>