<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE18707B"
    android:id="@+id/howotuse"
    tools:context=".activities.HowToUse">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdpp"
        android:layout_marginTop="@dimen/_30sdpp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/how_to_use"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/whiteColor"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_30sdpp"
            android:layout_height="@dimen/_30sdpp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdpp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/close_btnl" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </ScrollView>






        <!-- <WebView
                android:id="@+id/web_vu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/bar"
                android:layout_marginTop="@dimen/_15sdpp"
                android:background="#DE18707B" />
                -->
    </RelativeLayout>

</RelativeLayout>