<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rel_progress"
        android:layout_width="@dimen/_35sdpp"
        android:layout_height="@dimen/_35sdpp"
        android:layout_marginStart="@dimen/_5sdpp"
        android:layout_marginEnd="@dimen/_5sdpp"
        android:layout_alignBottom="@id/card_vu">

        <com.google.android.material.card.MaterialCardView
            android:theme="@style/Theme.MaterialComponents.Light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            app:cardCornerRadius="@dimen/_5sdpp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_vu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/player_active"
                android:background="@color/whiteColor"
                android:scaleType="centerInside"/>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_alignStart="@id/card_vu"
        android:layout_alignEnd="@id/card_vu"
        android:layout_marginTop="@dimen/_5sdpp"
        android:textColor="@color/darkTextColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:fontFamily="sans-serif-medium"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_vu"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_width="@dimen/_220sdpp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/_5sdpp"
        android:layout_marginBottom="@dimen/_5sdpp"
        android:layout_toEndOf="@id/rel_progress"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdfsaddsfdasfdsafdsafdsafdsafgfdsgfdsgfdsdsafsafdsafdsafdsasafdsafdsafdfdsafdsaaasdfsaddsfdasfdsafdsafdsafdsafgfdsgfdsgfdsdsafsafdsafdsafdsasafdsafdsafdfdsafdsaa"
            android:layout_margin="@dimen/_5sdpp"
            android:textColor="@color/subTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="sans-serif"/>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>