<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdpp"
    android:id="@+id/rel">

    <ImageView
        android:id="@+id/img_vu"
        android:layout_width="@dimen/_20sdpp"
        android:layout_height="@dimen/_20sdpp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_15sdpp"
        android:scaleType="centerInside"
        android:src="@drawable/expense_icon"/>

    <TextView
        android:id="@+id/text_vu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_15sdpp"
        android:layout_marginEnd="@dimen/_10sdpp"
        android:layout_toEndOf="@id/img_vu"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/darkTextColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdpp"
        android:background="@color/grayColor"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_15sdpp"/>

</RelativeLayout>