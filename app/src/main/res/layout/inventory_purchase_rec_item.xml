<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/rounded_stroke_sh"
    android:layout_height="@dimen/_70sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_80sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/_38sdp"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardBackgroundColor="#146141"
        android:id="@+id/editBtn">
        <TextView
            android:id="@+id/counterTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="normal"

            />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="@dimen/_60sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:id="@+id/icon"
        android:src="@drawable/ic_logo_mastercard"/>
    <TextView
        android:id="@+id/amountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AED 345"
        android:textColor="#26334A"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        />
    <TextView
        android:id="@+id/stockTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#26334A"
        android:text="Stock: 32"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@id/amountTv"
        app:layout_constraintTop_toBottomOf="@id/amountTv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#26334A"
        android:text="Water Pack"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@id/amountTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/amountTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>