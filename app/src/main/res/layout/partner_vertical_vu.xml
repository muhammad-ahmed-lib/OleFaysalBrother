<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">


    <androidx.cardview.widget.CardView
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/whiteColor"
        android:fitsSystemWindows="true"
        app:cardElevation="0.5dp"
        app:cardCornerRadius="@dimen/_10sdpp"
        app:contentPadding="@dimen/_10sdpp"
        android:layout_marginTop="@dimen/_5sdpp"
        android:layout_marginStart="@dimen/_5sdpp"
        android:layout_marginEnd="@dimen/_5sdpp"
        android:layout_marginBottom="@dimen/_5sdpp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_vu"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/_10sdpp"
                        android:elevation="2dp"
                        app:cardBackgroundColor="@color/whiteColor"
                        app:cardCornerRadius="@dimen/_100sdpp">

                        <ImageView
                            android:id="@+id/img_vu"
                            android:layout_width="66dp"
                            android:layout_height="66dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/blue_ole_logo" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/main_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toStartOf="@+id/btn_call"
                        android:layout_toEndOf="@+id/card_vu"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gt_walsheim_pro_medium"
                            android:text="@string/name"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/v5_text_color"
                            android:textSize="@dimen/_18sdpp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_5sdpp"
                            android:layout_marginEnd="@dimen/_10sdpp"
                            android:layout_marginBottom="@dimen/_2sdpp"
                            app:cardBackgroundColor="@color/v5greenColor"
                            app:cardCornerRadius="@dimen/_100sdpp"
                            app:cardElevation="0dp"
                            app:contentPaddingBottom="@dimen/_2sdpp"
                            app:contentPaddingLeft="@dimen/_5sdpp"
                            app:contentPaddingRight="@dimen/_5sdpp"
                            app:contentPaddingTop="@dimen/_2sdpp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_2sdpp"
                                android:layout_marginBottom="@dimen/_2sdpp">

                                <TextView
                                    android:id="@+id/tv_shares"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:fontFamily="@font/gt_walsheim_pro_regular"
                                    android:text="Share: 30 %"
                                    android:textColor="@color/whiteColor"
                                    android:textSize="@dimen/_12sdpp" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btn_call"
                        android:layout_width="@dimen/_40sdpp"
                        android:layout_height="@dimen/_40sdpp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@color/v5greenColor"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="@dimen/_100sdpp"
                        app:cardElevation="2dp"
                        android:layout_marginEnd="@dimen/_20sdpp">

                        <ImageView
                            android:layout_width="@dimen/_20sdpp"
                            android:layout_height="@dimen/_20sdpp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/v5_call_ic_white"/>

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>