<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".shop.AddAddressFragment">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="@dimen/_35sdpp"
        android:layout_height="@dimen/_35sdpp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/close_btnl" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bgVuColor"
        android:layout_marginTop="@dimen/_5sdpp"
        app:cardCornerRadius="@dimen/_5sdpp"
        app:cardElevation="0dp"
        android:layout_below="@+id/btn_close">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_15sdpp"
                    android:layout_marginEnd="@dimen/_15sdpp"
                    android:layout_marginTop="@dimen/_20sdpp">

                    <RelativeLayout
                        android:id="@+id/rel_home"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_corner_bg_whitel"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_5sdpp">

                        <ImageView
                            android:id="@+id/img_vu_home"
                            android:layout_width="@dimen/_15sdpp"
                            android:layout_height="@dimen/_15sdpp"
                            android:src="@drawable/uncheckl"
                            android:scaleType="centerInside"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/darkTextColor"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:text="@string/home"
                            android:layout_toEndOf="@id/img_vu_home"
                            android:layout_marginStart="@dimen/_8sdpp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_office"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_corner_bg_whitel"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdpp">

                        <ImageView
                            android:id="@+id/img_vu_office"
                            android:layout_width="@dimen/_15sdpp"
                            android:layout_height="@dimen/_15sdpp"
                            android:src="@drawable/uncheckl"
                            android:scaleType="centerInside"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_office"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/darkTextColor"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:text="@string/office"
                            android:layout_toEndOf="@id/img_vu_office"
                            android:layout_marginStart="@dimen/_8sdpp"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/rounded_corner_bg_whitel"
                    android:layout_marginStart="@dimen/_15sdpp"
                    android:layout_marginEnd="@dimen/_15sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/full_name"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="text"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/rounded_corner_bg_whitel"
                    android:layout_marginStart="@dimen/_15sdpp"
                    android:layout_marginEnd="@dimen/_15sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/mobile_no"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="phone"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdpp"
                    android:layout_marginStart="@dimen/_15sdpp"
                    android:layout_marginEnd="@dimen/_15sdpp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdpp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_bg_whitel"
                        android:layout_marginEnd="@dimen/_5sdpp">

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/city"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:inputType="text"
                            android:clickable="true"
                            android:focusableInTouchMode="false"
                            android:focusable="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdpp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_bg_whitel"
                        android:layout_marginStart="@dimen/_5sdpp">

                        <EditText
                            android:id="@+id/et_area"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/area"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:inputType="text"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/rounded_corner_bg_whitel"
                    android:layout_marginStart="@dimen/_15sdpp"
                    android:layout_marginEnd="@dimen/_15sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/address"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="text"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/rounded_corner_bg_whitel"
                    android:layout_marginStart="@dimen/_15sdpp"
                    android:layout_marginEnd="@dimen/_15sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_flat_villa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/flat_villa_no"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="text"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:background="@drawable/rounded_corner_bg_whitel"
                    android:layout_marginStart="@dimen/_15sdpp"
                    android:layout_marginEnd="@dimen/_15sdpp"
                    android:layout_marginTop="@dimen/_10sdpp">

                    <EditText
                        android:id="@+id/et_instruction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/delivery_instruction"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="text"/>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdpp"
                    android:layout_marginBottom="@dimen/_20sdpp"
                    android:layout_marginStart="@dimen/_20sdpp"
                    android:layout_marginEnd="@dimen/_20sdpp"
                    android:layout_marginTop="@dimen/_20sdpp"
                    app:cardCornerRadius="@dimen/_5sdpp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/green_btn_bgl"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_btn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/add_now"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/whiteColor"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>